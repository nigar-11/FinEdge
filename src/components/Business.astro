---
import { features } from "../constants";
import styles, { layout } from "../styles";

import Button from "./Button.astro";
---

<section id="features" class={layout.section}>
  <div class={layout.sectionInfo}>
    <h2 class={styles.heading2}>
      You do the business, <br class="sm:block hidden" />
      we'll handle the money.
    </h2>
    <p class={`${styles.paragraph} max-w-[470px] mt-5`}>
      With the right credit card, you can improve your financial life by building credit, earning rewards and saving money. But with hundreds of
      credit cards on the market.
    </p>
    <Button styles="mt-10" />
  </div>
  <div class={`${layout.sectionImg} flex-col`}>
    {
      features.map((feature, index) => (
        <div class={`flex flex-row p-6 rounded-[20px] ${index !== features.length - 1 ? "mb-6" : "mb-0"} feature-card`}>
          <div class={`w-[64px] h-[64px] rounded-full ${styles.flexCenter} bg-dimBlue`}>
            <feature.Icon />
          </div>
          <div class="flex-1 flex flex-col ml-3">
            <p class="font-poppins font-semibold text-white text-lg leading-[23px] mb-1">{feature.title}</p>
            <p class="font-poppins font-normal text-dimWhite text-base leading-6 mb-1">{feature.content}</p>
          </div>
        </div>
      ))
    }
  </div>
</section>
