---
import styles from "../styles";
import { robot } from "../assets";
import GetStarted from "./GetStarted.astro";

import Discount from "../assets/svg/Discount.astro";
---

<section id="home" class={`flex md:flex-row flex-col bg-primary ${styles.paddingY} ${styles.flexStart} ${styles.boxWidth}`}>
  <div class={`flex-1 ${styles.flexStart} flex-col xl:px-0 sm:px-16 px-6`}>
    <div class="flex flex-row items-center py-[6px] px-4 bg-discount-gradient rounded-[10px] mb-2">
      <Discount />
      <p class={`${styles.paragraph} ml-2`}>
        <span class="text-white">20%</span> Discount for{" "}
        <span class="text-white">1 Month</span> Account
      </p>
    </div>
    <div class="flex flex-row justify-between items-center w-full">
      <h1 class="flex-1 font-poppins font-semibold ss:text-7xl text-[52px] text-white ss:leading-[100px] leading-[75px]">
        The Next <br class="sm:block hidden" />
        <span class="text-gradient">Generation</span>
      </h1>
      <div class="ss:flex hidden md:mr-4 mr-0">
        <GetStarted />
      </div>
    </div>
    <h1 class="font-poppins font-semibold ss:text-[68] text-[52px] text-white ss:leading-[100px] leading-[75px] w-full">Payment Method.</h1>
    <p class={`${styles.paragraph} max-w-[470px] mt-5`}>
      Our team of experts uses a methodology to identify the credit cards most likely to fit your needs. We examine annual percentage rates, annual
      fees.
    </p>
  </div>
  <div class={`flex-1 flex ${styles.flexCenter} md:my-0 my-10 relative`}>
    <img src={robot} alt="billing" decoding="async" class="w-full h-full relative z-[5]" />
    <div class="absolute z-[0] w-[40%] h-[35%] top-0 pink__gradient"></div>
    <div class="absolute z-[1] w-[80%] h-[80%] rounded-full bottom-40 white__gradient"></div>
    <div class="absolute z-[0] w-[50%] h-[50%] right-20 bottom-20 blue__gradient"></div>
  </div>
  <div class={`ss:hidden ${styles.flexCenter}`}>
    <GetStarted />
  </div>
</section>;
